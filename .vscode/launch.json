// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run CICS Extension for Zowe",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/vsce",
        "--verbose"
      ],
      "outFiles": ["${workspaceFolder}/packages/vsce/dist/**/*.js"],
      "preLaunchTask": "npm run watch",
      "smartStep": true,
      "skipFiles": ["<node_internals>/**"],
      "enableTurboSourcemaps": true,
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run VSCE Tests",
      "runtimeExecutable": "npm",
      "cwd": "${workspaceFolder}/packages/vsce",
      "args": [ "test" ],
      "enableTurboSourcemaps": true,
      "sourceMaps": true
  },
      {
      "name": "Run CICS Extension for Zowe (FR)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/vsce",
        "--locale=fr",
        "--verbose"
      ],
      "outFiles": ["${workspaceFolder}/packages/vsce/dist/**/*.js"],
      "preLaunchTask": "npm run watch",
      "smartStep": true,
      "skipFiles": ["<node_internals>/**"],
      "enableTurboSourcemaps": true,
      "sourceMaps": true
    }
  ]
}
